{% comment %}
  Template optimizado para página de Clara integrada con Shopify
  URL: /pages/clara

  Mantiene header/footer de Shopify para navegación
  Iframe 85vh optimizado sin elementos innecesarios
  Clara maneja su propia autenticación (AuthGate)
{% endcomment %}

<style>
  /* Contenedor principal de Clara - optimizado para prevenir scroll */
  .clara-page-wrapper {
    height: 100vh;
    position: relative;
    background: #ffffff;
    overflow: hidden;
  }

  /* Contenedor del iframe - 85vh para balance con header/footer */
  .clara-iframe-container {
    position: relative;
    width: 100%;
    height: 85vh;
    border-radius: 0;
    overflow: hidden;
    margin: 0;
    padding: 0;
  }

  /* iframe de Clara */
  #clara-iframe {
    width: 100%;
    height: 100%;
    border: none;
    display: block;
  }

  /* Loading screen */
  .clara-loading {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    color: white;
    transition: opacity 0.5s;
    z-index: 10;
  }

  .clara-loading.hidden {
    opacity: 0;
    pointer-events: none;
  }

  .clara-spinner {
    width: 50px;
    height: 50px;
    border: 4px solid rgba(255,255,255,0.3);
    border-top-color: white;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-bottom: 20px;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .clara-loading-text {
    font-size: 18px;
    font-weight: 500;
    margin-bottom: 8px;
  }

  .clara-loading-subtext {
    font-size: 14px;
    opacity: 0.8;
  }

  /* Mobile optimizations - mismo 85vh para consistencia */
  @media (max-width: 768px) {
    .clara-iframe-container {
      height: 85vh;
    }
  }
</style>

<div class="clara-page-wrapper">
  <!-- Contenedor del iframe - sin header text innecesario -->
  <div class="clara-iframe-container">
    <!-- Loading screen -->
    <div class="clara-loading" id="clara-loading">
      <div class="clara-spinner"></div>
      <p class="clara-loading-text">Cargando Clara...</p>
      <p class="clara-loading-subtext">Tu asesora virtual de skincare</p>
    </div>

    {% comment %}
      FASE 2: Customer Data Extraction and HMAC Token Generation
      Passes customer PII from Liquid (available on Basic plan) to widget via URL
    {% endcomment %}

    {%- liquid
      # Get HMAC secret from store metafield
      # This must match SHOPIFY_HMAC_SECRET in Vercel environment variables
      # Using custom.hmac_secret (Shopify default namespace for store metafields)
      assign hmac_secret = shop.metafields.custom.hmac_secret

      # Check if customer is logged in
      if customer
        # Extract customer data (available in Liquid even on Basic plan)
        assign customer_id = customer.id
        assign first_name = customer.first_name
        assign last_name = customer.last_name
        assign customer_email = customer.email
        assign orders_count = customer.orders_count

        # Generate HMAC token for security validation
        # This matches Node.js: crypto.createHmac('sha256', secret).update(customer_id).digest('hex')
        assign shopify_token = customer_id | hmac_sha256: hmac_secret

        # Build widget URL with customer data (PRODUCTION)
        assign widget_url = 'https://clara-shopify.vercel.app'
        assign widget_url = widget_url | append: '?customer_id=' | append: customer_id
        assign widget_url = widget_url | append: '&shopify_token=' | append: shopify_token

        # Add PII data (URL encoded to handle special characters like ñ, é)
        if first_name != blank
          assign widget_url = widget_url | append: '&first_name=' | append: first_name | url_encode
        endif

        if last_name != blank
          assign widget_url = widget_url | append: '&last_name=' | append: last_name | url_encode
        endif

        if customer_email != blank
          assign widget_url = widget_url | append: '&email=' | append: customer_email | url_encode
        endif

        if orders_count
          assign widget_url = widget_url | append: '&orders_count=' | append: orders_count
        endif
      else
        # Anonymous user - use generic Clara (PRODUCTION)
        assign widget_url = 'https://clara-shopify.vercel.app'
      endif
    -%}

    <!-- Clara iframe with dynamic URL -->
    <iframe
      src="{{ widget_url }}"
      id="clara-iframe"
      title="Clara - Asesora Virtual de Skincare"
      allow="microphone; camera; autoplay; encrypted-media; fullscreen; display-capture"
      allowfullscreen
      loading="eager">
    </iframe>
  </div>
</div>

<script>
  // Ocultar loading screen cuando iframe carga
  (function() {
    const iframe = document.getElementById('clara-iframe');
    const loading = document.getElementById('clara-loading');

    if (iframe && loading) {
      iframe.addEventListener('load', function() {
        setTimeout(function() {
          loading.classList.add('hidden');
        }, 500);
      });

      // Timeout fallback
      setTimeout(function() {
        loading.classList.add('hidden');
      }, 5000);
    }
  })();
</script>
