{% comment %}
  Template para página de Clara integrada con Shopify
  URL: /pages/clara

  Clara maneja su propia autenticación (AuthGate)
  Muestra header/footer de Shopify con navegación completa
  Iframe optimizado full-width para máxima visibilidad del avatar
{% endcomment %}

<style>
  /* Contenedor principal de Clara */
  .clara-page-wrapper {
    min-height: 70vh;
    position: relative;
    background: #ffffff;
  }

  /* Contenedor del iframe */
  .clara-iframe-container {
    position: relative;
    width: 100%;
    height: 80vh;
    min-height: 600px;
    border-radius: 0;
    overflow: hidden;
    box-shadow: none;
    margin: 0;
    max-width: 100%;
  }

  /* iframe de Clara */
  #clara-iframe {
    width: 100%;
    height: 100%;
    border: none;
    display: block;
  }


  /* Loading screen */
  .clara-loading {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    color: white;
    transition: opacity 0.5s;
    border-radius: 0;
  }

  .clara-loading.hidden {
    opacity: 0;
    pointer-events: none;
  }

  .clara-spinner {
    width: 50px;
    height: 50px;
    border: 4px solid rgba(255,255,255,0.3);
    border-top-color: white;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-bottom: 20px;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .clara-loading-text {
    font-size: 18px;
    font-weight: 500;
    margin-bottom: 8px;
  }

  .clara-loading-subtext {
    font-size: 14px;
    opacity: 0.8;
  }

  /* Header de la página */
  .clara-page-header {
    text-align: center;
    padding: 3rem 1rem 1rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .clara-page-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 1rem;
  }

  .clara-page-header p {
    font-size: 1.1rem;
    color: #666;
    line-height: 1.6;
  }

  /* Mobile optimizations */
  @media (max-width: 768px) {
    .clara-iframe-container {
      height: 70vh;
      min-height: 500px;
      margin: 0;
      border-radius: 0;
    }

    .clara-page-header h1 {
      font-size: 2rem;
    }

    .clara-page-header p {
      font-size: 1rem;
    }
  }
</style>

<div class="clara-page-wrapper">
  <!-- Header de la página -->
  <div class="clara-page-header">
    <h1>{{ page.title }}</h1>
    <p>{{ page.content | default: "Habla con Clara, tu asesora virtual de skincare personalizada. Clara está aquí para ayudarte con recomendaciones y consejos expertos." }}</p>
  </div>

  <!-- Contenedor del iframe -->
  <div class="clara-iframe-container">
    <!-- Loading screen -->
    <div class="clara-loading" id="clara-loading">
      <div class="clara-spinner"></div>
      <p class="clara-loading-text">Cargando Clara...</p>
      <p class="clara-loading-subtext">Tu asesora virtual de skincare</p>
    </div>

    <!-- Clara iframe -->
    <iframe
      src="https://clara-shopify.vercel.app"
      id="clara-iframe"
      title="Clara - Asesora Virtual de Skincare"
      allow="microphone; camera; autoplay; encrypted-media; fullscreen; display-capture"
      allowfullscreen
      loading="eager">
    </iframe>
  </div>
</div>

<script>
  // Ocultar loading screen cuando iframe carga
  (function() {
    const iframe = document.getElementById('clara-iframe');
    const loading = document.getElementById('clara-loading');

    if (iframe && loading) {
      iframe.addEventListener('load', function() {
        setTimeout(function() {
          loading.classList.add('hidden');
        }, 500);
      });

      // Timeout fallback
      setTimeout(function() {
        loading.classList.add('hidden');
      }, 5000);
    }
  })();
</script>
