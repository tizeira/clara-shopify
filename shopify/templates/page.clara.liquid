{% comment %}
  Template para página dedicada de Clara
  URL: /pages/clara

  Clara maneja su propia autenticación (AuthGate)
  No necesitamos password en Shopify
{% endcomment %}

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <meta name="robots" content="noindex, nofollow">
  <title>Clara - Asesora Virtual | {{ shop.name }}</title>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html, body {
      width: 100%;
      height: 100%;
      overflow: hidden;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: #ffffff;
    }

    /* Contenedor del iframe */
    .clara-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      z-index: 9999;
    }

    /* iframe de Clara */
    #clara-iframe {
      width: 100%;
      height: 100%;
      border: none;
      display: block;
    }

    /* Loading screen */
    .loading-screen {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      color: white;
      z-index: 1;
      transition: opacity 0.5s;
    }

    .loading-screen.hidden {
      opacity: 0;
      pointer-events: none;
    }

    .spinner {
      width: 50px;
      height: 50px;
      border: 4px solid rgba(255,255,255,0.3);
      border-top-color: white;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin-bottom: 20px;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    .loading-text {
      font-size: 18px;
      font-weight: 500;
      margin-bottom: 8px;
    }

    .loading-subtext {
      font-size: 14px;
      opacity: 0.8;
    }

    /* Mobile optimizations */
    @media (max-width: 768px) {
      .clara-container {
        /* En mobile, usar 100% del viewport */
        height: 100dvh; /* dynamic viewport height */
      }

      .loading-text {
        font-size: 16px;
      }

      .loading-subtext {
        font-size: 12px;
      }
    }

    /* Ocultar header/footer de Shopify */
    .shopify-section-header,
    .shopify-section-footer,
    header,
    footer,
    nav {
      display: none !important;
    }
  </style>
</head>
<body>

  <!-- Loading screen -->
  <div class="loading-screen" id="loading-screen">
    <div class="spinner"></div>
    <p class="loading-text">Cargando Clara...</p>
    <p class="loading-subtext">Tu asesora virtual de skincare</p>
  </div>

  <!-- Clara iframe -->
  <div class="clara-container">
    <iframe
      src="https://clara-shopify.vercel.app"
      id="clara-iframe"
      title="Clara - Asesora Virtual de Skincare"
      allow="microphone; camera; autoplay; encrypted-media; fullscreen; display-capture"
      allowfullscreen
      loading="eager">
    </iframe>
  </div>

  <script>
    // Ocultar loading screen cuando iframe carga
    const iframe = document.getElementById('clara-iframe');
    const loadingScreen = document.getElementById('loading-screen');

    iframe.addEventListener('load', function() {
      setTimeout(function() {
        loadingScreen.classList.add('hidden');
      }, 500);
    });

    // Timeout fallback (si iframe no dispara load)
    setTimeout(function() {
      loadingScreen.classList.add('hidden');
    }, 5000);

    // Prevenir que la página de Shopify sea "scrollable"
    document.body.style.overflow = 'hidden';
    document.documentElement.style.overflow = 'hidden';

    // Ocultar elementos de Shopify
    document.addEventListener('DOMContentLoaded', function() {
      const elementsToHide = [
        '.shopify-section-header',
        '.shopify-section-footer',
        'header',
        'footer',
        'nav'
      ];

      elementsToHide.forEach(function(selector) {
        const elements = document.querySelectorAll(selector);
        elements.forEach(function(element) {
          element.style.display = 'none';
        });
      });
    });
  </script>

</body>
</html>
